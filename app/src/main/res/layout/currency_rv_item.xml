<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/black_shade_2"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/idRLCurrency">

        <TextView
            android:id="@+id/idTVTicker"
            android:layout_width="309dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:layout_toLeftOf="@+id/idTVCurrencyRate"
            android:layout_toEndOf="@+id/star"
            android:padding="3dp"
            android:text="Ticker"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idTVCurrencyName"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idTVTicker"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@+id/star"
            android:padding="3dp"
            android:text="Name"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Rate"
            android:textColor="@color/white"
            android:id="@+id/idTVCurrencyRate"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:padding="3dp"
            />

        <ImageButton
            android:id="@+id/star"
            android:layout_width="52dp"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:tag="starOutline"
            app:srcCompat="@drawable/ic_star_outline" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>